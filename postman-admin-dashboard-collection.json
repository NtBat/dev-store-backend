{
    "info": {
        "name": "DevStore - Admin Dashboard",
        "description": "Collection for testing admin dashboard routes",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{admin_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3333",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "your-admin-token-here",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Get dashboard metrics",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/admin/dashboard",
                    "host": ["{{base_url}}"],
                    "path": ["admin", "dashboard"]
                }
            },
            "response": []
        },
        {
            "name": "Get revenue chart - 7 days",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/admin/dashboard/revenue-chart?period=7days",
                    "host": ["{{base_url}}"],
                    "path": ["admin", "dashboard", "revenue-chart"],
                    "query": [
                        {
                            "key": "period",
                            "value": "7days"
                        }
                    ]
                }
            },
            "response": []
