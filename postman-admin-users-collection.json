{
  "info": {
    "name": "DevStore - Admin Users",
    "_postman_id": "admin-users-collection",
    "description": "Collection for testing DevStore admin user management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3333",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users?page=1&limit=20",
          "host": ["{{base_url}}"],
          "path": ["admin", "users"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Page number"
            },
            {
              "key": "limit",
              "value": "20",
              "description": "Items per page"
            },
            {
              "key": "search",
              "value": "john",
              "disabled": true,
              "description": "Search by name or email"
            },
            {
              "key": "role",
              "value": "customer",
              "disabled": true,
              "description": "Filter by role (customer or admin)"
            }
          ]
        },
        "description": "Get paginated list of all users with optional filters"
      },
      "response": []
    },
    {
      "name": "Get Users Statistics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users/stats",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "stats"]
        },
        "description": "Get general statistics about users (total, new this month, active users)"
      },
      "response": []
    },
    {
      "name": "Get User by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users/1",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "1"]
        },
        "description": "Get complete details for a specific user including addresses, orders, and favorites"
      },
      "response": []
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"email\": \"john.updated@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/users/1",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "1"]
        },
        "description": "Update user information (name and/or email). All fields are optional."
      },
      "response": []
    },
    {
      "name": "Update User Role",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"admin\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/users/1/role",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "1", "role"]
        },
        "description": "Change user role between customer and admin"
      },
      "response": []
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users/1",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "1"]
        },
        "description": "Delete a user from the system (cannot be undone)"
      },
      "response": []
    }
  ]
}
