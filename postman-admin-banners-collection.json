{
  "info": {
    "name": "DevStore - Admin Banners",
    "_postman_id": "admin-banners-collection",
    "description": "Collection for testing DevStore admin banner management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3333",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get All Banners",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/banners",
          "host": ["{{base_url}}"],
          "path": ["admin", "banners"]
        },
        "description": "Get all banners ordered by order field"
      },
      "response": []
    },
    {
      "name": "Get Banner by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/banners/1",
          "host": ["{{base_url}}"],
          "path": ["admin", "banners", "1"]
        },
        "description": "Get a specific banner by ID"
      },
      "response": []
    },
    {
      "name": "Create Banner",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"img\": \"banner-promo.png\",\n  \"link\": \"/products/react\",\n  \"order\": 0\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/banners",
          "host": ["{{base_url}}"],
          "path": ["admin", "banners"]
        },
        "description": "Create a new banner"
      },
      "response": []
    },
    {
      "name": "Update Banner",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"img\": \"banner-promo-updated.png\",\n  \"link\": \"/products/vue\",\n  \"order\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/banners/1",
          "host": ["{{base_url}}"],
          "path": ["admin", "banners", "1"]
        },
        "description": "Update an existing banner. All fields are optional."
      },
      "response": []
    },
    {
      "name": "Delete Banner",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/banners/1",
          "host": ["{{base_url}}"],
          "path": ["admin", "banners", "1"]
        },
        "description": "Delete a banner (cannot be undone)"
      },
      "response": []
    },
    {
      "name": "Reorder Banners",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"banners\": [\n    { \"id\": 1, \"order\": 0 },\n    { \"id\": 2, \"order\": 1 },\n    { \"id\": 3, \"order\": 2 }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/banners/reorder",
          "host": ["{{base_url}}"],
          "path": ["admin", "banners", "reorder"]
        },
        "description": "Update the display order of multiple banners at once"
      },
      "response": []
    }
  ]
}
